{
  "manifest_version": 3,
  "name": "Glindafy",
  "version": "3.0.0",
  "description": "AI-powered pink theme transformation with Glinda glow-up aesthetic using Gemini",
  "action": {
    "default_title": "Activate Glinda Glow-up"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/16x16.png",
    "48": "assets/48x48.png",
    "128": "assets/128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "service-worker.js",
        "assets/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
